<script type="text/javascript">
function updatepassword(value) {
	$.ajax({
		url: '/updatepassword',
		type: 'POST',
		dataType: 'json',
		data: {
			value: value
		},
		success: function () {
			$.notify("Пароль изменен", {
				className: "success"
			});
		},
		error: function () {
			$.notify("Произошла ошибка. Попробуйте еще раз", {
				className: "error"
			});
		}
	});
}
</script>
